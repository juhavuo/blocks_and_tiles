<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fi.juhavuometropolia.theblocksandtiles.ChooserActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chooseSaveTV"
        android:text="@string/chooseSaveTV"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save1Button"
        android:layout_below="@id/chooseSaveTV"
        android:text="@string/save1ButtonString"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save2Button"
        android:layout_below="@id/save1Button"
        android:text="@string/save2ButtonString"

        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save3Button"
        android:layout_below="@id/save2Button"
        android:text="@string/save3ButtonString"
        />


</RelativeLayout>
